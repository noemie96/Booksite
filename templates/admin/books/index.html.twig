{% extends 'admin/base.html.twig' %}

{% block title %}Administration des fiches livres{% endblock %}

{% block body %}
<div class="container-fluid">
<h1 class="my-5">Gestion des fiches</h1>
<table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur de la fiche</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for books in pagination.data %}
                    <tr>
                        <td>{{books.id}}</td>
                        <td>{{books.title}}</td>
                        <td>{{books.utilisateur.fullName}}</td>
                        <td class="text-center">
                            <span class="badge badge-primary rounded">{{books.avgRatings }}</span>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('admin_books_edit', {'id':books.id})}}" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('admin_books_delete', {'id':books.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}
