{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateur{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des utilisateur</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Auteur</th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.fullName}}</td>
                        <td class="text-justify">{{user.introduction | raw | nl2br }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{pagination.display()}}
    </div>
{% endblock %}