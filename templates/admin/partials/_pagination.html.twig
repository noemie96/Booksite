<div class="d-flex justify-content-center">
   
    <ul class="pagination">
        <li class="page-item {% if page == 1 %}disabled{% endif %}">
            <a class="page-link" href="{{path(route,{"page":page - 1, "filtre":category})}}">&laquo;</a>
        </li>
        {% for i in 1..pages %}
            <li class="page-item {% if page== i %}active{% endif %}">
                <a class="page-link" href="{{path(route,{"page": i,  "filtre":category})}}">{{i}}</a>
            </li>  
        {% endfor %}

        <li class="page-item {% if page == pages %}disabled{% endif %}">
            <a class="page-link" href="{{path(route,{"page":page + 1,  "filtre":category})}}">&raquo;</a>
        </li>
    </ul>
</div> 